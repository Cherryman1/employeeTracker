<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cornez.employeetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LandingScreenActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.LandingScreen"
                    android:screenOrientation="portrait"
                    android:label="@string/app_name" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN"
                    android:screenOrientation="portrait"
                    android:label="@string/app_name"/>
            </intent-filter>
        </activity>

        <activity android:name=".EmployerViewActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.EmployerView"
                    android:screenOrientation="portrait"
                    android:label="@string/app_name" />
            </intent-filter>
        </activity>

        <activity android:name=".EmployeeViewActivity">
            <intent-filter>
                <action
                    android:name="android.intent.action.EmployeeView"
                    android:screenOrientation="portrait"
                    android:label="@string/app_name" />
            </intent-filter>
        </activity>
    </application>

</manifest>